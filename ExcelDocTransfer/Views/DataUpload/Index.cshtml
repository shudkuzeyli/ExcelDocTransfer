<form asp-controller="DataUpload" asp-action="Index" method="post" enctype="multipart/form-data">
	<div class="form-group">
		<label for="file"> Excel dosyasını yükle</label>
		<input type="file" name="file" />
	</div>
	<div class="form-group">
		<input type="submit" value="Upload" class="btn btn-primary" />
	</div>
</form>

<table id="Tablolar" style="width:100%">
	<thead>
		<tr>
			<th class="col-1">İşlemler</th>
			<th>@Html.DisplayNameFor(Model => Model.CustomerName)</th>
			<th>@Html.DisplayNameFor(Model => Model.CustomerAddress)</th>
			<th>@Html.DisplayNameFor(Model => Model.CustomerCity)</th>
			<th>@Html.DisplayNameFor(Model => Model.InvoiceNumber)</th>
			<th>@Html.DisplayNameFor(Model => Model.Fees)</th>
			<th>@Html.DisplayNameFor(Model => Model.VisitDate)</th>
		</tr>
	</thead>
	<tbody style="font-size: 2rem">
		@foreach (var item in Model)
		{
			<tr>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id" data-toogle="tooltip" title="Düzenle" class=" btn btn-warning"><i style="font-size: 2rem" class="bi bi-plus"></i></a>
					<a asp-action="Detail" asp-route-id="@item.Id" data-toogle="tooltip" title="Detay Gör" class=" btn btn-warning"><i style="font-size: 2rem" class="bi bi-person-vcard"></i></a>
					<a asp-action="Delete" asp-route-id="@item.Id" data-toogle="tooltip" title="Sil" class=" btn btn-warning"><i style="font-size: 2rem" class="bi bi-trash3"></i></a>
				</td>
				<td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
				<td>@Html.DisplayFor(modelItem => item.CustomerAddress)</td>
				<td>@Html.DisplayFor(modelItem => item.CustomerCity)</td>
				<td>@Html.DisplayFor(modelItem => item.InvoiceNumber)</td>
				<td>@Html.DisplayFor(modelItem => item.Fees)</td>
				<td>@Html.DisplayFor(modelItem => item.VisitDate)</td>
				@*Alttakini kullanmak istersen Model'deki DisplayFormat'ı kapatman gerek*@
				@* <td>	@item.VisitDate.ToString("dd/MM/yyyy")</td> *@
			</tr>
		}

</table>
